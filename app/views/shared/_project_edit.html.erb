<div class="d-flex">        
  <div class="my-2 mr-5">
    <%= f.label :見積番号 %> <em></em><br />
    <h5>
    No. <%= format("%08d", @project.id) %>
    </h5>
  </div>
  <div class="my-2 mr-5">
    <%= f.label :作成日 %> <em></em><br />
    <h5>
    <%= @project.created_at.strftime('%Y/%m/%d')%>
    </h5>
  </div>
</div>

<div class="">
  <%= f.label :件名 %> <span class="text-danger">（必須）</span><em></em><br />
