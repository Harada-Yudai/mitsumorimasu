<%= render "shared/header" %>
<div class="d-flex justify-content-center mt-3 ">
  <h1 class="border-bottom border-danger text-center font-weight-bold" style="width:350px;">御見積情報編集</h1>
</div>
<div class="d-flex justify-content-center mt-3">
  <h4 class="font-weight-bold mt-1"><%= "#{@client.cli_company}"+"　"+"#{@client.cli_last_name}"+" "+"#{@client.cli_first_name}"+"　"+"様"%></h4>
</div>
<div class="justify-content-center " style="height:90%;">
  <%= form_with model: @project, url: user_client_project_path(current_user.id,client_id:@client.id), local: true do |f| %>
    <div style="height:100%; " class="bg-light border border-dark container rounded-lg  py-2 justify-content-center ">
          <%= render 'shared/error_messages', model: f.object %>
          
      <div class="d-flex">        
        <div class="my-2 mr-5">
          <%= f.label :作成日 %> <em></em><br />
          <%= f.text_field :pro_day, placeholder:"作成日" , autofocus: true%>
        </div>
        <div class="my-2 mr-5">
          <%= f.label :見積番号 %> <em></em><br />
          <%= f.text_field :pro_number, placeholder:"見積番号"%>
        </div>
      </div>

      <div class="field">
        <%= f.label :件名 %> <em></em><br />
        <%= f.text_field :pro_name, placeholder:"件名",style:"width:100%;"%>
      </div>

      <div class="my-2" >
        <%= f.label :備考 %> <em></em><br />
        <%= f.text_area :pro_info, placeholder:"", style:"width:100%;"%>
      </div>

      <div class="mt-3 d-flex justify-content-center"> 
        <%= f.submit "更新" ,class:"btn btn-primary text-nowrap btn-lg border border-dark"%>
      </div>
  </div>
  <div class="mt-3 d-flex justify-content-center"> 
    <%= f.submit "削除" ,class:"btn btn-danger text-nowrap btn-lg border border-dark"%>
  </div>
   <% end %>
