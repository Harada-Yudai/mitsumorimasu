        <%= f.label :備考 %> <em></em><br />
        <%= f.text_area :pro_info, placeholder:"",style:"width:100%;"%>
      </div>

      <div class="mt-3 d-flex justify-content-center"> 
        <%= f.submit "追加" ,class:"btn btn-primary text-nowrap btn-lg border border-dark"%>
      </div>
    <% end %>
