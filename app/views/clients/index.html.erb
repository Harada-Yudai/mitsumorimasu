<%= render "shared/header" %>
<div class="mx-2 my-2 fs-6">
  <%= link_to 'お客様情報変更', edit_user_client_path(current_user.id,id:@client.id), class:"my-1 mx-3 btn btn-secondary text-nowrap" %>
    <ul>
      <li><%= @client.cli_last_name %></li>
      <li><%= @client.cli_first_name %></li>
    </ul>
  <%= link_to '新規見積追加', new_user_client_project_path(current_user.id,client_id:@client.id), class:"my-1 mx-3 btn btn-secondary text-nowrap" %>
  <% if @projects.blank? %>
    <div　class="">
    見積実績はありません
    </div>
  <%else%>
    <div class="row flex-nowrap overflow-auto mx-2" >
      <% @projects.each do |project| %>
        <div class="mx-2">
          <div class="card" style="width: 20rem; height: 7rem;">
            <div class="card-body">
              <h5 class="">
                <%= project.pro_name %>
              </h5>
              <div class="d-flex flex-row">
                <div>
                  <div>
                    <%= project.created_at.strftime('%Y/%m/%d')%>
                  </div>
                  <div>
                    <%= project.pro_number %>
                  </div>
                </div>
                <div class="pl-4 py-2  d-flex">
                  <%= link_to '詳細表示', "", class:"btn btn-primary " %>
                  <%= link_to '編集',edit_user_client_project_path(current_user.id, client_id:@client.id, id:project.id) , class:"btn btn-success ml-2 " %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <%end%>
</div>


<span class="d-flex mx-2">
  <div class="text-nowrap ">
  <%= link_to '印刷用', "", class:"my-1 mx-2 btn btn-secondary text-nowrap" %>
  <%= link_to '商品追加',"", class:"my-1 mx-2 btn btn-secondary text-nowrap" %>
  <%= link_to '商品編集',"", class:"my-1 mx-2 btn btn-secondary text-nowrap" %>
  </div>
  <div class="d-flex"> 
    <h3 class="bg-info my-1 mx-2 py-1 px-2 text-nowrap" style="height:40px;">
    件名：見積６
    </h3>
    <h3 class="bg-info my-1 mx-5 py-1 px-2 text-nowrap" style="height:40px;">
    合計金額：¥100000
    </h3>
    <h3 class="bg-info my-1 mx-2 py-1 px-2 text-nowrap" style="height:40px;">
    No.0000xxxxxx
    </h3>
  </div>
</span>  
<div class="mx-3">
  <div class="d-flex d-flex justify-content-start">
    <div class="text-nowrap ">
      <button type="button" class="d-flex text-nowrap justify-content-between rounded-pill border border-dark list-group-item list-group-item-action" style="width:220px;">
        <div>商品1</div>
        <div>¥1000</div>
      </button>
      <button type="button" class="my-2 d-flex text-nowrap justify-content-between rounded-pill border border-dark list-group-item list-group-item-action" style="width:220px;">
        <div>商品2</div>
        <div>¥2000</div>
      </button>
      <button type="button" class="my-2 d-flex text-nowrap justify-content-between rounded-pill border border-dark list-group-item list-group-item-action" style="width:220px;">
        <div>商品3</div>
        <div>¥3000</div>
      </button>
      <button type="button" class="my-2 d-flex text-nowrap justify-content-between rounded-pill border border-dark list-group-item list-group-item-action" style="width:220px;">
        <div>商品4</div>
        <div>¥4000</div>
      </button>
    </div>
    <div class="mx-2 text-nowrap bg-success border border-dark" style="width:100%; height:500px;">
      <%= render "shared/goods_detail" %>
    </div>
  </div>
</div>
</div>
