<%= render "shared/header" %>
<h2>商品編集ページ</h2>
<ul>
    <li><%= @client.cli_last_name %></li>
    <li><%= @client.cli_first_name %></li>
    <li><%= @project.pro_name %></li>
</ul>
<%= form_with model: @item, url: user_client_project_item_path(project_id:@project.id), local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      
  <div class="field">
    <%= f.label :item_name %> <em></em><br />
    <%= f.text_field :item_name, autofocus: true, placeholder:"商品名"%>
  </div>

  <div class="field">
    <%= f.label :item_price %> <em></em><br />
    <%= f.text_field :item_price, placeholder:"価格"%>
  </div>

  <div class="field">
    <%= f.label :item_amount %> <em></em><br />
    <%= f.text_field :item_amount, placeholder:"数量"%>
  </div>

  <div class="field">
    <%= f.label :item_info %> <em></em><br />
    <%= f.text_area :item_info, placeholder:"備考"%>
  </div>

  <div class="actions">
    <%= f.submit "変更" %>
  </div>
<% end %>